	script.
		var result=!{JSON.stringify(result)};
		for(var i =0;i<result.results.length;i++)
		{
			var gal=$('<div></div>');
			gal.addClass('gallery');
			var description=$('<div></div>');
			description.addClass('desc');
			gal.css('margin','5px');
			gal.css('border','1px solid #ccc');
			gal.css('float','left');
			gal.css('width','185px');
			gal.hover(function()
			{
				$(this).css('border','1px solid #777');
			});
			description.css('padding','15px');
			description.css('text-align','center');
			description.css('background-color','#333');
			gal.css('background-color','#333');








				var base_url="http://image.tmdb.org/t/p/w185";

				var image=$('<img></img>');

				var links=$('<span></span>');
				var add_link=$('<a href="#"></a>');
				var like_link=$('<a href="#"></a>');
				var add=$('<i class="fa fa-plus-square fa-1.2x"></i>');
				var like=$('<i class="fa fa-heart fa-1.2x"></i>');
					add.css('color','#fff');
					like.css('color','#d62c1a');
					add_link.html(add);
					like_link.html(like);
					add_link.css('margin-left','7px');
					like_link.css('margin-left','7px');
					links.css('margin-left','7px');

				$('#gallery').css('background-color','#694b0b');
				$('#gallery').css('font-family','"Oswald", sans-serif');

				var image_url='';

				var more_info=$('<a href="#">More Info</a>');
				if(result.results[i].poster_path!==null){
				image_url=base_url+result.results[i].poster_path;
				console.log(image_url);
				}
				else
				{
				continue;
				}
				$('body').css('background-color','#694b0b');
				image.attr('src',image_url);
				description.append(links);
				gal.append(image);
				gal.append(add_link);
				gal.append(like_link);
				gal.append(more_info);
				$('#show_result').append(gal);

				console.log(result.results[i]);
